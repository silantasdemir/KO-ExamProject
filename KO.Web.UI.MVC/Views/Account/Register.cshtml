@using KO.Entities
@model Member
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div id="loginbox" style="margin:auto;margin-top:150px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title" style="text-align:center;background-color:aliceblue;">Üye Ol</div>
            </div>
            <div class="panel-body" style="padding-top:30px;">
                <div class="alert alert-danger col-sm-12" style="display:none" id="login-alert"></div>

                <form asp-controller="Member" asp-action="Register" method="post" class="form-horizontal" role="form">
                    <div class="input-group" style="margin-bottom:25px;">
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="input-group" style="margin-bottom:25px;">
                        <input asp-for="Password" class="form-control" placeholder="Şifre" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="col-sm-12 controls">
                        <input type="submit" class="btn btn-success" value="Uye Ol" style="float:right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>