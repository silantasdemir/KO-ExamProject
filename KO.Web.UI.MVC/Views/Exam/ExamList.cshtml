@using KO.Entities
@model List<Exam>
@{
    ViewData["Title"] = "ExamList";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Tarih</th>
            <th></th>

        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Header</td>
                <td>@Model[i].CreatedDate.ToString("yyyy'-'MM'-'dd")</td>
                <td>@Html.ActionLink("Sil", "ExamDelete", "Exam", new { id = Model[i].ID })</td>
                <td>@Html.ActionLink("Sınav Ol", "ExamComplete", "Exam", new { id = Model[i].ID })</td>
            </tr>
        }
    </tbody>
</table>